@import "/home/fabi/.cache/wal/colors-waybar.css";
* {
	border:15;
	border-radius: 0;
	font-family: Nerd Font Hack;
	font-size: 14px;
	min-height: 24px;
	border-radius: 5px;
	
}
/*
label {
	color: @background;
}
*/
window#waybar {
	background: transparent;
}

window#waybar.hidden {
	opacity: 0.2;
}

#window {
    margin-top: 8px;
    padding-left: 16px;
    padding-right: 16px;
	border-radius: 26px;
	transition: none;
	/*
    color: #f8f8f2;
	background: #282a36;
    */
    color: transparent;
	background: transparent;
}


#workspaces {
	margin-top: 8px;
	margin-left: 12px;
	margin-bottom: 0px;
	transition: none;
	background: @foreground;
}

#workspaces button {
	transition: .2s;
	color: #f8f8f2;
	background: transparent;
	color: @background;
	font-size: 16px;
}

#workspaces button.active {
	margin-top: 0px;
	font-weight: bold;
	font-size: 20px;
	transition: .2s;
    margin-top: 0px;
    margin-left: 0px;
	margin-right: 0px;
	margin-bottom: 0;
    
	background: @background;  	
  	color: @foreground;
}


#workspaces button.focused {
	color: #9aedfe;
}

#workspaces button:hover {
	transition: none;
	box-shadow: inherit;
	text-shadow: inherit;
	color: #ff79c6;
}

#custom-media {
	margin-top: 8px;
	margin-left: 8px;
	padding-left: 16px;
	padding-right: 16px;
	margin-bottom: 0;
	
	background: #282a36;
	transition: none;
	background-color: @foreground;
	color: @background;
	font-weight: bold;
}

#custom-shutdown {
	margin-top: 8px;
	margin-right: 16px;
    font-weight: bold;
    font-size: 20px;
	color: @foreground;
	border-radius: 0px;
}


#network {
	margin-top: 8px;
	margin-left: 8px;
	padding-left: 16px;
